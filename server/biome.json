{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "indentStyle": "tab",
      "indentWidth": 4,
      "lineWidth": 100
    },
    "javascript": {
      "formatter": {
        "arrowParentheses": "asNeeded",
        "jsxQuoteStyle": "double",
        "quoteStyle": "single",
        "semicolons": "asNeeded",
        "trailingCommas": "es5",
        "bracketSameLine": true
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "files": {
      "ignore": [
        "node_modules"
      ]
    }
  }